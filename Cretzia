    <input type="text" id="instagram" placeholder="Enter Instagram handle" />
    <label for="description">Describe the style of the order (max 300 words):</label>
    <textarea id="description" maxlength="1800" placeholder="Enter your description here..."></textarea>
    <button id="submitDesc" style="margin-top: 10px;">Submit</button>
    <button class="home-button" onclick="goHome()">Back to Home</button>
  </div>

  <!-- Message -->
  <div id="messageSection">
    <p>Payment methods available: <strong>Instapay</strong> or <strong>Fawry</strong>.</p>
    <p>Please check your WhatsApp to send the message with your order details.</p>
    <p>You can also DM me on Instagram (<a href="#" id="userInstagramLink" class="instagram-link" target="_blank"></a>) to complete payment.</p>
    <button class="home-button" onclick="goHome()">Back to Home</button>
  </div>
