<script>
  const sidebar = document.getElementById('sidebar');
  const toggleSidebar = document.getElementById('toggleSidebar');
  const homeSection = document.getElementById('homeSection');
  const descriptionSection = document.getElementById('descriptionSection');
  const messageSection = document.getElementById('messageSection');
  const instagramInput = document.getElementById('instagram');
  const descriptionInput = document.getElementById('description');
  const submitDesc = document.getElementById('submitDesc');
  const userInstagramLink = document.getElementById('userInstagramLink');

  let selectedService = null;
  let orderData = {};

  toggleSidebar.addEventListener('click', () => {
    sidebar.classList.toggle('active');
  });

  function goHome() {
    homeSection.style.display = 'block';
    descriptionSection.style.display = 'none';
    messageSection.style.display = 'none';
    sidebar.classList.remove('active');
  }

  function handleServiceSelection(serviceName) {
    selectedService = serviceName;
    homeSection.style.display = 'none';
    descriptionSection.style.display = 'flex';
    messageSection.style.display = 'none';
    sidebar.classList.remove('active');
  }

  submitDesc.addEventListener('click', () => {
    const text = descriptionInput.value.trim();
    const insta = instagramInput.value.trim();
    if (!insta) {
      alert('Please enter your Instagram account handle.');
      return;
    }
    if (!text) {
      alert('Please enter a description of the order style.');
      return;
    }
    if (text.length > 1800) {
      alert('Your description exceeds 300 words max. Please shorten it.');
      return;
    }
    if (!selectedService) {
      alert('Please select a service before submitting.');
      return;
    }

    orderData = { insta, description: text, service: selectedService };
    descriptionSection.style.display = 'none';
    messageSection.style.display = 'flex';

    const phoneNumber = '201013430536';
    const message = `New order for service: ${orderData.service}%0A%0AFrom Instagram: @${orderData.insta}%0A%0ADescription:%0A${encodeURIComponent(orderData.description)}`;
    const whatsappUrl = `https://wa.me/${phoneNumber}?text=${message}`;

    window.open(whatsappUrl, '_blank');

    userInstagramLink.href = `https://instagram.com/${orderData.insta}`;
    userInstagramLink.textContent = '@' + orderData.insta;
  });
</script>
</body>
